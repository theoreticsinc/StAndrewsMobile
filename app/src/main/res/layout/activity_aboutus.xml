<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/about_us_bg">

    <LinearLayout
        android:id="@+id/linearlayout1"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:paddingRight="5dp"
        android:paddingLeft="5dp"
        android:layout_weight="0">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:layout_marginLeft="3dp"
            android:id="@+id/homeButton"
            android:src="@drawable/home"
            android:layout_weight="1"
            android:minHeight="50dp"
            android:minWidth="50dp"
            android:maxWidth="75dp"
            android:maxHeight="75dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:id="@+id/aboutButton"
            android:src="@drawable/about"
            android:layout_weight="1"
            android:minHeight="50dp"
            android:minWidth="50dp"
            android:maxWidth="75dp"
            android:maxHeight="75dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/btn1"
            android:layout_toEndOf="@+id/btn1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:id="@+id/sasButton"
            android:src="@drawable/sas_life"
            android:layout_weight="1"
            android:minHeight="50dp"
            android:minWidth="50dp"
            android:maxWidth="75dp"
            android:maxHeight="75dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/btn2"
            android:layout_toEndOf="@+id/btn2" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:id="@+id/ministryButton"
            android:src="@drawable/ministry1"
            android:layout_weight="1"
            android:minHeight="50dp"
            android:minWidth="50dp"
            android:maxWidth="75dp"
            android:maxHeight="75dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/btn3"
            android:layout_toEndOf="@+id/btn3" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout2"
        android:layout_centerHorizontal="true"
        android:id="@+id/linearLayout3"
        android:paddingTop="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_weight="4">

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mainScrollView"
            android:scrollIndicators="none">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/clubButton"
                    android:src="@drawable/homebanner"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/philoButton"
                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"
                    android:src="@drawable/philosophy_button" />
            </LinearLayout>
        </HorizontalScrollView>


    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/linearLayout3"
        android:layout_centerHorizontal="true"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_weight="5"
        android:paddingTop="5dp">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">

            <TextView

                android:text="@string/vision_statement"
                android:id="@+id/vs"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="3"
                android:background="@color/andrean_red"
                android:textColor="@color/white"
                android:gravity="center_vertical|center_horizontal"
                android:padding="5dp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="@string/vision"
                android:id="@+id/vs1"
                android:layout_weight="1"
                android:background="@color/andrean_red"
                android:textColor="@color/white"
                android:gravity="center_horizontal"
                android:padding="10dp" />


        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingRight="5dp"
            android:paddingLeft="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/mission_statement"
                android:id="@+id/ms"
                android:layout_weight="3"
                android:textColor="@color/white"
                android:gravity="center_vertical|center_horizontal"
                android:background="@color/andrean_orange"
                android:layout_gravity="center_horizontal"
                android:ellipsize="end"
                android:typeface="sans" />

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/historyButton"
                android:src="@drawable/history"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:layout_weight="1" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>