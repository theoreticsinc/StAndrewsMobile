<resources>

    <!-- Base application theme. -->

    <style name="AppTheme" parent="@android:style/Theme.Holo.Light">
        <item name="windowNoTitle">false</item>
        <item name="android:windowNoTitle">false</item>
        <item name="android:windowActionBar">true</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:logo">@android:color/transparent</item>
    </style>

    <style name="SplashTheme" parent="@android:style/Theme.Holo.Light.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:logo">@android:color/transparent</item>
    </style>

    <style name="MyActionBar" parent="@android:style/Widget.ActionBar">
        <item name="android:background">@color/white</item>
        <item name="android:displayOptions">showHome|homeAsUp|showTitle</item>
        <item name="android:icon">@drawable/menuline</item>
        <item name="android:actionMenuTextColor">@color/blue</item>
        <item name="android:titleTextStyle">@style/RedTheme.ActionBar.TitleTextStyle</item>
        <item name="android:subtitleTextStyle">@style/RedTheme.ActionBar.TitleTextStyle</item>

        <!-- Support library compatibility -->
        <item name="background">@color/white</item>
        <item name="titleTextStyle">@style/RedTheme.ActionBar.TitleTextStyle</item>
        <item name="subtitleTextStyle">@style/RedTheme.ActionBar.TitleTextStyle</item>
        <item name="actionMenuTextColor">@color/blue</item>
    </style>

    <style name="MyActionBar25" parent="@android:style/Widget.ActionBar">
        <item name="android:background">@color/white</item>
        <item name="android:displayOptions">showHome|homeAsUp|showTitle</item>
        <item name="displayOptions">showHome|homeAsUp|showTitle</item>
        <item name="android:icon">@android:color/transparent</item>
    </style>
    <!-- ActionBar styles -->
    <style name="RedActionBar" parent="@android:style/Widget.ActionBar">
        <item name="android:background">@color/red</item>
        <item name="android:textColor">#FFFFFF00</item>
        <item name="android:displayOptions">showHome|homeAsUp|showTitle</item>
        <item name="android:icon">@drawable/menuline</item>
        <item name="android:titleTextStyle">@style/RedTheme.ActionBar.TitleTextStyle</item>
        <item name="android:subtitleTextStyle">@style/RedTheme.ActionBar.TitleTextStyle</item>

        <!-- Support library compatibility -->
        <item name="background">@color/white</item>
        <item name="titleTextStyle">@style/RedTheme.ActionBar.TitleTextStyle</item>
        <item name="subtitleTextStyle">@style/RedTheme.ActionBar.TitleTextStyle</item>

    </style>
    <style name="RedTheme.ActionBar.TitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12sp</item>

        <item name="android:textColorPrimary">#ffff0000</item>
    </style>
    <style name="MyTheme.ActionBar.TitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/red</item>
    </style>

    <!-- ActionBar title text -->
    <style name="MyActionBarTitleText"
        parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/red</item>
    </style>

    <!-- ActionBar tabs text -->
    <style name="MyActionBarTabText"
        parent="@style/Widget.AppCompat.ActionBar.TabText">
        <item name="android:textColor">@color/red</item>
    </style>

</resources>
